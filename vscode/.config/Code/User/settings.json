{
    "editor.cursorBlinking":                "phase",
    "editor.cursorSmoothCaretAnimation":    false,
    "editor.fontFamily":                    "Iosevka, 'Ubuntu Mono', 'IBM Plex Mono', 'Fira Code', Source Code Pro, Inconsolata, 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures":                 false,
    "editor.fontSize":                      12,
    "editor.minimap.enabled":               true,
    "editor.minimap.renderCharacters":      false,
    "editor.renderFinalNewline":            true,
    "editor.renderWhitespace":              "boundary",
    "editor.rulers":                        [80, 120],
    "editor.smoothScrolling":               true,
    "editor.suggestSelection":              "first",

    "files.associations": {
        ".env.dist":        "dotenv",
        ".php_cs.dist":     "php",
        "composer.lock":    "json",
        "phpunit.xml.dist": "xml"
    },

    "files.trimTrailingWhitespace": true,

    "hadolint.hadolintPath": "/usr/local/bin/hadolint",

    "java.configuration.checkProjectSettingsExclusions": false,
    "java.home": "/usr/lib/jvm/java-11-openjdk-amd64",

    "php-cs-fixer.executablePath":              "/usr/local/bin/php-cs-fixer",
    "php-cs-fixer.onsave":                      false,
    "php-cs-fixer.config":                      ".php_cs;.php_cs.dist;",
    "php-cs-fixer.allowRisky":                  false,
    "php-cs-fixer.pathMode":                    "override",
    "php-cs-fixer.exclude":                     [],
    "php-cs-fixer.autoFixByBracket":            false,
    "php-cs-fixer.autoFixBySemicolon":          false,
    "php-cs-fixer.formatHtml":                  false,
    "php-cs-fixer.lastDownload":                1553523666182,
    "php-cs-fixer.documentFormattingProvider":  true,
    "php-cs-fixer.rules":                       "",

    "php.suggest.basic": false,

    "window.titleBarStyle": "custom",
    "window.zoomLevel":     0,

    "workbench.activityBar.visible":                    true,
    "workbench.colorTheme":                             "Solarized Light",
    "workbench.editor.enablePreview":                   false,
    "workbench.editor.enablePreviewFromQuickOpen":      false,
    "workbench.editor.highlightModifiedTabs":           true,
    "workbench.settings.enableNaturalLanguageSearch":   false,
    "workbench.statusBar.feedback.visible":             false,

    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

    "spellright.language": [],
    "spellright.documentTypes": [
        "markdown",
        "latex"
    ],

    "ruby.useBundler": true, //run non-lint commands with bundle exec
    "ruby.useLanguageServer": true, // use the internal language server (see below)
    "ruby.lint": {
      "rubocop": {
        "useBundler": true // enable rubocop via bundler
      },
      "reek": {
        "useBundler": true // enable reek via bundler
      }
    },
    "ruby.format": "rubocop" // use rubocop for formatting
}
